/**app.wxss**/
text,view,swiper,icon,
button,checkbox-group,checkbox,
input,label,picker,radio-group,radio,slider,switch,textarea,
navigator,image,video,audio,map,cover-view,cover-image{
    box-sizing: border-box;
    font-size: 28rpx;
}
image{
  width: auto;
  height: auto
}
page{
    box-sizing: border-box;
}
.flex-box{
    display: flex;
}
.flex-1{
    flex: 1;
}
.flex-2{
    flex: 2;
}
.flex-3{
    flex: 3;
}
.flex-4{
    flex: 4;
}
.flex-5{
    flex: 5;
}
button{
    position: relative;
    margin-top: 0;
    padding-left: 0;
    padding-right: 0;
    padding-bottom: 0;
    background-color: #fff;
    border: none;
    border-radius: 0;
}
button::after,
button::before{
    content: '';
   border: none;
}

.fl{float: left;}
.fr{float: right;}
.clearfix:after{
    content: "";
    clear: both;
    display: block;
}
input{
  outline:none;
  border:none;
  list-style: none;
}

.custom{
  position:fixed;
  width:100%;
  top:0;
  left:0;
  height:130rpx;
  z-index:1;
  text-align:center;
  line-height:87rpx;
  padding-bottom:100rpx;
}
.custom text{
  color: #000;
  font-size: 32rpx;
  font-weight: 500;
}
.empty_custom{
  height: 130rpx;
  width: 100%;
  border-bottom:1rpx solid #ddd;
  padding-bottom:100rpx;
  
}
.flex_center,.empty_custom{
  background: #fff;
}
.flex_center text{
  font-weight: bold
}
.back_page{
  width:74rpx;
  height:84rpx;
  position:absolute;
  bottom:12rpx;
  left:0;
  padding:30rpx;
}
.reminder_box{
  position: fixed;
    top: 40%;
    background: #000;
    opacity: .6;
    color: #fff;
    font-size: 28rpx;
    border-radius: 6rpx;
    padding: 10rpx;
    text-align: center;
    width: 70%;
    left: 15%;
    z-index: 10;
}

.page_shade{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  opacity: .5;
  background: #000;
  z-index: 3;
  
}
.page_shade_balck{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  opacity: .5;
  background: #000;
  z-index: 3;
  
}

/* 取消或者拒绝订单时候的弹框样式 */
.cancel_box{
    position: fixed;
    left: 0;
    width: 100%;
    bottom: 0;
    background: #fff;
    z-index: 10;
    padding: 0 24rpx;
    border-top:1rpx solid #eee;
}
.cancel_inner_box{

}
.cancel_header{
    font-size:40rpx;
    color: #333;
    padding: 44rpx 0 44rpx 14rpx;
    border-bottom: 1rpx solid #eee
}
.cancel_select_box{

}
.cancel_select_inner_box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding: 25rpx 20rpx
}
.cancel_select_inner_box.other{
  display: block
}
.cancel_select_inner_top_box{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cancel_write_txt{
    width: 100%;
    font-size: 34rpx;
    padding:8rpx;
    text-align: center;
    border: none;
    height: 50rpx;
    line-height: 50rpx;
}
.cancel_txt{
  font-size: 31rpx;
  color: #333;
}
.cancel_img{
  width: 52rpx;
  height: 52rpx;
}
.cancel_btn_box{

}
.cancel_btn_cancel{
    width: 70%;
    margin: 34rpx auto;
    box-shadow: 0 0 14rpx #ff5d5d;
    height: 64rpx;
    line-height: 64rpx;
    border-radius: 32rpx;
    background: linear-gradient(to right, #ff805e, #ff2e2e);
    color: #fff;
}
.cancel_btn_again{
    color: #0095ff;
    box-shadow: 0 0 14rpx #ccc;
    height: 64rpx;
    line-height: 64rpx;
    border-radius: 32rpx;
    width: 70%;
    margin: 0 auto 30rpx
}