/* pages/famer_details/famer_details.wxss */
.farmer_banner{
  width: 100%;
  height: 360rpx
}

.farmer_banner_box{
    width: 100%;
    position: relative;
    height: 360rpx
}
.farmer_authentication{
    position: absolute;
    background: #0077e6;
    left: 0;
    top:30rpx;
    color: #fff;
    height:50rpx;
    font-size:20rpx;
    line-height:50rpx;
    border-radius: 0 25rpx 25rpx 0;
    padding:0 24rpx 0 14rpx;
}
.farmer_authentication.index{
  background: #ccc;
}
.farmer_info_box{
  padding: 34rpx 30rpx

}
.farmer_info_one{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.farmer_info_name{
  font-size: 36rpx;
  color: #333;
  font-weight: bold
}
.farmer_info_distance{
  font-size: 24rpx;
  color: #aaa
}
.farmer_info_two{
  display: flex;
  justify-content: space-between;
  align-items: center
}
.farmer_grade_box{
  display: flex;
  align-items: center
}
.farmer_grade_innerbox{
    background: #ff6f26;
    color: #fff;
    padding:0rpx 10rpx;
    border-radius:9rpx;
    margin-right: 14rpx;
}
.farmer_grade_star{
    width: 23rpx;
    height: 23rpx;
    margin-right:5rpx;
}
.farmer_grade_value{
color: #fff;
    font-size: 20rpx;
}
.farmer_grade_word{
  color: #ff6f26;
  font-size: 20rpx;
}
.farmer_tel_box{
  display:flex;
  align-items: center
}
.farmer_tel_logo{
  margin-right: 14rpx;
  width: 32rpx;
  height: 32rpx;
}
.farmer_tel{
  font-size: 24rpx;
  color: #333
}

#map{
  width: 100%;
  height:430rpx;
}

.farmer_map_box{
  position: relative
}
.farmer_map{
  display: flex;
  align-items: center;
  position: absolute;
  padding: 30rpx 24rpx;
  justify-content: space-between;
  bottom: 24rpx;
  background: #fff;
  border: 1rpx solid #eee;
  width: 94%;
  left:3%;
  border-radius:10rpx 
}
.farmer_map_position_box{
  display: flex;
  align-items: center
}
.farmer_map_position_logo{
  width: 20rpx;
  height: 22rpx;
  margin-right: 16rpx;
}
.farmer_map_position{
  font-size: 26rpx;
  color: #333;
  width: 90%;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.farmer_map_tel_logo{
  width: 60rpx;
  height: 50rpx;
}

.evaluate_box{

}
.evaluate_top_box{
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee
}
.evaluate_header{
  font-size: 24rpx;
  color: #333;
}
.evaluate_all{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 24rpx;
  color: #aaa
}
.evaluate_all_right{
  width: 12rpx;
  height: 20rpx;
  margin-left: 5rpx
}
.evaluate_content_box{
  padding: 24rpx 34rpx;
  border-bottom: 1rpx solid #eee
}
.evaluate_content_top{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.evaluate_person_box{
  display: flex;
  justify-content: flex-start;
  align-items: center
}
.evaluate_person_img{
  width: 100rpx;
  height: 100rpx;
  border: 5rpx solid #eee;
  border-radius:50rpx;
  margin-right: 24rpx 
}
.evaluate_person_name{
  font-size: 26rpx;
  font-weight: bold
}
.evaluate_content_date{
  color: #aaa;
  font-size: 16rpx;
  margin: 15rpx 0 
}
.evaluate_content{
  font-size: 24rpx;
  color: #333;
  text-indent: 30rpx;
  line-height: 50rpx
}
.evaluate_content_img_box{
  padding: 15rpx 0
}
.evaluate_content_img{
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx
}
.to_search_all{
  color: #888;
  font-size: 20rpx;
  padding: 34rpx 0;
  text-align: center 
}
.to_search_all text{
  color: #0095ff;
  font-size: 20rpx;
 }