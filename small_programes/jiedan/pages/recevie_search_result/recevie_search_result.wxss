/* pages/recevie_order/recevie_order.wxss */
page{
  background: #eee
}
.empty_custom{
  border-bottom: none
}
.recevie_top{
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  position:fixed;
  width:100%;
  background:#fff;
  z-index:3;
  padding-bottom: 20rpx
}

.recevie_box{
  padding: 30rpx 20rpx 200rpx;
}
.recevie_content{
  border-radius:10rpx;
  background: #fff;
  padding: 40rpx;
  margin-bottom: 30rpx
}
.recevie_content.index{
  background:url(data:image/png;base64,) no-repeat right bottom,#fff;
  background-size: 12%
}
.recevie_content_top{
  border-bottom: 1rpx solid #eee;
  position: relative;
  padding-bottom: 40rpx
}
.recevie_content_authentication{
    position: absolute;
    background: #ccc;
    color: #fff;
    height: 38rpx;
    line-height: 38rpx;
    padding: 0 13rpx;
    border-radius:19rpx; 
    font-size:18rpx;
    left: -30rpx;
}
.recevie_content_authentication.index{
  background: #0077e6;
}
.recevie_content_top_inner{
  display: flex;
  justify-content: space-between
}
.recevie_content_name_box{
  display: flex;
  justify-content: flex-start
}
.farmer_img{
  width: 120rpx;
    height: 120rpx;
    border: 10rpx solid #eee;
    border-radius:60rpx;
    margin-right: 24rpx 
}
.farmer_name_box{
  
}
.farmer_name{
  font-size: 34rpx;
    font-weight: bold;
    margin-bottom: 14rpx;
}
.farmer_grade_box{
display: flex;
  align-items: center
}
.farmer_grade_innerbox{
    background: #ff6f26;
    color: #fff;
    padding:9rpx 14rpx;
    border-radius:9rpx;
    margin-right: 14rpx;
    display: flex;
    width:88rpx;
}
.farmer_grade_star{
    width: 23rpx;
    height: 23rpx;
    margin-right:5rpx;
    margin-top:5rpx;
}
.farmer_grade_value{
    color: #fff;
    font-size: 24rpx;
}
.farmer_position{
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  overflow-x:hidden;
}
.recevie_content_distance{
  color: #999;
  position: absolute;
  right:0rpx;
  top: 0rpx
}

.recevie_content_center{
  padding: 20rpx 0 30rpx;
  border-bottom: 1rpx solid #eee;
  text-align: center
}
.recevie_content_header{
  font-size: 40rpx;
  color: #666;
  text-align: center;
}
.recevie_content_price{
  color: #6cd986;
  margin: 20rpx 0 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.recevie_content_price_unit{
  font-size: 28rpx;
}
.recevie_content_price_value{
  font-size: 46rpx;
}
.recevie_content_date{
  font-size: 24rpx;
  color: #999;
}
.recevie_btn{
  font-size:32rpx;
  width:60%;
  margin-left:20%;
  color:#fff;
  text-align:center;
  background:linear-gradient(to right, #6cd986, #22d2ac);
  height:60rpx;
  line-height:60rpx;
  border-radius:30rpx;
  margin-top:32rpx;
}
.recevie_btn.index{
  background: #eee
}
.search_box{
  display:flex;
  justify-content:center;
  align-items:center;
  height:50rpx;
  border-radius:25rpx;
  width:40%;
  background:#e7e7e7;
  margin-left:30%;
  margin-top:28rpx;

}
.search_box_logo{
  width: 24rpx;
  height: 24rpx;
  margin-right:10rpx;
}
.search_box_txt{
  font-size: 22rpx!important;
  color: #333!important
}