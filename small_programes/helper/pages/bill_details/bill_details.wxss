}
.bill_account_name{
  font-size: 32rpx;
  color: #333
}
.bill_account_num{
  font-size: 28rpx;
  color: #666
}
.bill_order{
  border-bottom: 1rpx solid #eee;
  padding: 34rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.bill_order_left{

}
.bill_order_type{
  font-size: 32rpx;
  color: #333;
  margin-bottom: 24rpx;
}
