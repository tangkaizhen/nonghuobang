.bill_box{
  padding: 0 30rpx;
}
.bill_top{
  padding: 46rpx 0 138rpx;
  text-align: center
}
.bill_success{
  width: 100rpx;
  height: 100rpx;
}
.bill_success_txt{
  font-size: 42rpx;
  color: #333;
  margin: 48rpx 0 24rpx;
}
.bill_success_date{
  font-size: 28rpx;
  color: #666;
} 
.bill_account_box{
  border-top: 1rpx solid #eee;
