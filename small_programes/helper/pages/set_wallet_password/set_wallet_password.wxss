/* pages/set_wallet_pass/set_wallet_pass.wxss */
page{
  background:#2ed19f;
  height: 100%;
}
.back_page {
  left:10rpx 
}
.empty_custom,.custom{
  background:#2ed19f;
}
.custom text{
  color: #fff
}
.empty_custom{
  border-bottom: none
}
.set_wallet_pass_outter{
  margin: 40rpx 20rpx;
  background: #fff;
  padding:50rpx 40rpx;
  height:82%;
  border-radius: 10rpx;
}
.set_wallet_pass_inner{

}
.set_wallet_pass_main_header{
  font-size: 60rpx;
  color: #333;
  font-weight: 50;
  margin-bottom: 82rpx
}
.set_wallet_pass_header{
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.set_wallet_pass_tel_box{
  border-bottom: 1rpx solid #eee;
  text-align: center;
  padding-bottom: 10rpx;
}
.set_wallet_pass_tel_val{
  font-size: 38rpx;
  color: #333;
}
.set_wallet_pass_verification_box{
  padding-bottom: 22rpx;
  border-bottom: 1rpx solid #eee;
  text-align: center;
  margin-top: 24rpx;
  display: flex;
  position: relative
}
.set_wallet_pass_verification_val{
  font-size: 42rpx;
  color: #333;
  width: 100%
}
.set_wallet_pass_verification_btn{
  font-size: 20rpx;
  color: #333;
  font-weight: bold;
  height: 44rpx;
  width: 141rpx;
  text-align: center;
  line-height: 44rpx;
  border: 1rpx solid #333;
  border-radius:22rpx; 
  margin-top:3rpx;
  position:absolute;
  right:0rpx;
  z-index: 2
}
.set_wallet_pass_next{
  background:linear-gradient(to right, rgb(108, 217, 134), rgb(34, 210, 172));
  color: #fff;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  margin-top: 60rpx;
  width: 94%;
  margin-left: 3%;
  margin-bottom: 20rpx;
}
.top_box{
  position: relative;
  height: 150rpx;
  width: 100%;
  padding: 70rpx 0 0 30rpx
}
.back_last_page{
  width: 18rpx;
  height: 32rpx;

}
.forget_pass{
  color: #2ed19f;
  text-align: center;
  font-size: 28rpx
}