/* pages/write_pindan/write_pindan.wxss */
.outter_box{
  width: 100%;
  padding: 0 30rpx
}
.info_box{
  padding: 0 10rpx;
  border-bottom: 1rpx solid #fafafa;
  display: flex;
  justify-content: space-between;
  height: 88rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 88rpx;
  position:relative;

}
.info_fore{
  font-size: 28rpx;
  color: #333
}
.info_value{
  padding-left:10rpx;
  margin-top:18rpx;
  width:60%;
}
.info_inner_box{
  display: flex;
  justify-content: flex-end;
  position:relative;

}
.info_inner_box .info_value{
  width: none;
  text-align: right;
  padding-right: 10rpx
}
.icon_forward{
  width:12rpx;
  height:20rpx;
  margin-top:34rpx;
  margin-left:20rpx;
}

.filtrate_box{
  padding: 40rpx 0 40rpx 0;
  border-bottom: 1rpx solid #fafafa;
  width:100%;
  background:#fff;
  display: flex;
}
.filtrate_left_box{
  border-right:1rpx solid #eee;
  padding-right: 40rpx;
}
.filtrate_inner_box{
  text-align: center
}
.filtrate_type_img{
  width: 80rpx;
  height: 80rpx;
}
.filtrate_type_txt{
  font-size: 24rpx;
  text-align: center;
  margin-top:13rpx;

}
.filtrate_right_box{
  display: flex;
  justify-content: space-around;
  flex:1;
}
.info_operate_box .info_fore{
  margin-left:12rpx;
  margin-top:11rpx;
}
.info_unit{

}
.info_data{
  background: url(data:image/png;base64,);
  background-repeat:no-repeat;
  background-size:26rpx 29rpx;
  background-position: 100% 40%
}
.start_pindan{
  background:linear-gradient(to right, rgb(108, 217, 134), rgb(34, 210, 172));
  color: #fff;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  margin-top: 60rpx;
  width: 86%;
  margin-left: 7%;
  position:fixed;
bottom:30rpx;

}
.info_picker_box{
  width:100%;
height:100%;
position:absolute;
z-index:10;

}
.info_picker{
  opacity:0;
}