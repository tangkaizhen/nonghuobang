/**app.wxss**/
text,view,swiper,icon,
button,checkbox-group,checkbox,
input,label,picker,radio-group,radio,slider,switch,textarea,
navigator,image,video,audio,map{
    box-sizing: border-box;
}

page{
    box-sizing: border-box;
}
.flex-box{
    display: flex;
}
.flex-1{
    flex: 1;
}
.flex-2{
    flex: 2;
}
.flex-3{
    flex: 3;
}
.flex-4{
    flex: 4;
}
.flex-5{
    flex: 5;
}
button{
    position: relative;
    margin-top: 0;
    padding-left: 0;
    padding-right: 0;
    padding-bottom: 0;
    background-color: #fff;
    border: none;
    border-radius: 0;
}
button::after,
button::before{
    content: '';
   border: none;
}

.fl{float: left;}
.fr{float: right;}
.clearfix:after{
    content: "";
    clear: both;
    display: block;
}
input{
  outline:none;
  border:none;
  list-style: none;
}

.custom{
  position:fixed;
  width:100%;
  top:0;
  left:0;
  height:130rpx;
  z-index:1;
  text-align:center;
  line-height:87rpx;
  padding-bottom:100rpx;
}
.custom text{
  color: #000;
  font-size: 32rpx;
  font-weight: 500;
}
.empty_custom{
  height: 130rpx;
  width: 100%;
  border-bottom:1rpx solid #ddd;
  padding-bottom:100rpx;

}
.flex_center,.empty_custom{
  background: #fff;
}
.flex_center text{
  font-weight: bold
}
.back_page{
  width:74rpx;
height:84rpx;
position:absolute;
bottom:12rpx;
left:34rpx;
padding:30rpx;

}

.reminder_box{
  position: fixed;
    top: 40%;
    background: #000;
    opacity: .6;
    color: #fff;
    font-size: 28rpx;
    border-radius: 6rpx;
    padding: 10rpx;
    text-align: center;
    width: 70%;
    left: 15%;
    z-index: 10;
}

.page_shade{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  opacity: .5;
  background: #000;
  z-index: 3;
  
}